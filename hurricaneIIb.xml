  </vstab>

  <!-- radiator 'wing' centre -->
  <vstab x="-3.93"
         y="-0.34"
         z="-1.09"
         dihedral="0"
         twist="0"
         chord="1.00"
         taper="1"
         incidence="0"
         sweep="0"
