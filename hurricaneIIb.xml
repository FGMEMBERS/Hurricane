<?xml version="1.0"?>
<!--

************************************************************************

YASim aerodynamic model for a Hurricane IIb 

Author: Vivian Meazza

The reference datum for measurements is the nose.

************************************************************************

-->
<!-- Weight of everything but fuel  (5590lbs empty) -->
<airplane mass="6780">
	<!-- Approach configuration -->
	<approach speed="80"
						aoa="7">
		<control-setting axis="/controls/engines/engine[0]/throttle"
										 value="0.2"/>
		<control-setting axis="/controls/engines/engine[0]/mixture"
										 value="1.0"/>
		<control-setting axis="/controls/engines/engine[0]/propeller-pitch"
										 value="1"/>
		<control-setting axis="/controls/engines/engine[0]/boost"
										 value="0.70"/>
		<control-setting axis="/controls/flight/flaps"
										 value="0.60"/>
		<control-setting axis="/controls/gear/gear-down"
										 value="1"/>
		<solve-weight idx="0"
									weight="200"/>
	</approach>
	<!-- Cruise configuration -->
	<cruise speed="295"
					alt="22000"
					fuel="0.5">
		<control-setting axis="/controls/engines/engine[0]/throttle"
										 value="1.0"/>
		<control-setting axis="/controls/engines/engine[0]/mixture"
										 value="1.0"/>
		<control-setting axis="/controls/engines/engine[0]/propeller-pitch"
										 value="1.0"/>
		<control-setting axis="/controls/engines/engine[0]/boost"
										 value="1.0"/>
		<control-setting axis="/controls/flight/flaps"
										 value="0.0"/>
		<control-setting axis="/controls/gear/gear-down"
										 value="0"/>
		<solve-weight idx="0"
									weight="200"/>
	</cruise>
	<!-- pilot's eyepoint -->
	<cockpit x="-3.86"
					 y="0"
					 z="0.55"/>
	<fuselage
		ax="0.0"
		ay="0.0"
		az="0.0"
		bx="-9.10"
		by="0.0"
		bz="0.0"
		width="0.99"
		taper="0.38"
		midpoint="0.4"
    />
	<wing
		x="-3.48"
		y="1.34"
		z="-0.57"
		taper="0.5"
		incidence="2"
		twist="-2.0"
		length="4.314"
		chord="2.497"
		sweep="-3"
		dihedral="3.5"
		effectiveness="1.0" >
		<stall aoa="24"
					 width="4"
					 peak="1.5"/>
		<flap0 start="0.00"
					 end="0.457"
					 lift="1.45"
					 drag="1.5"/>
		<flap1 start="0.457"
					 end="1.0"
					 lift="1.2"
					 drag="1.35"/>
		<control-input axis="/controls/flight/flaps"
									 control="FLAP0"/>
		<control-output control="FLAP0"
										prop="/surface-positions/flap-pos-norm"/>
		<!--<control-speed control="FLAP0" transition-time="10"/> -->
		<control-input axis="/controls/flight/aileron"
									 control="FLAP1"
									 split="true"/>
		<control-output control="FLAP1"
										side="left"
										prop="/surface-positions/left-aileron-pos-norm"/>
		<control-output  control="FLAP1"
										 side="right"
										 prop="/surface-positions/right-aileron-pos-norm"/>
		<control-speed control="FLAP1"
									 transition-time="2"/>
	</wing>
	<!-- tailplane -->
	<hstab
		x="-8.89"
		y="0.22"
		z="0.0"
		taper="0.7"
		effectiveness="1.2"
		length="1.15"
		chord="1.283"
		sweep="5" >
		<stall aoa="22"
					 width="4"
					 peak="1.5"/>
		<flap0 start="0.0"
					 end="1.1"
					 lift="1.4"
					 drag="1.4"/>
		<control-input axis="/controls/flight/elevator"
									 control="FLAP0"/>
		<control-input axis="/controls/flight/elevator-trim"
									 control="FLAP0"/>
		<control-output control="FLAP0"
										prop="/surface-positions/elevator-pos-norm"/>
		<control-speed control="FLAP0"
									 transition-time="2"/>
	</hstab>
	<!-- tail -->
	<vstab x="-8.88"
				 y="0"
				 z="-0.51"
				 taper="0.386"
				 effectiveness="1.1"
				 incidence="0.25"
				 length="2.2"
				 chord="1.83"
				 sweep="5" >
		<stall aoa="20"
					 width="4"
					 peak="1.5"/>
		<flap0 start="0"
					 end="1"
					 lift="1.4"
					 drag="1.4"/>
		<control-input axis="/controls/flight/rudder"
									 control="FLAP0"
									 invert="true"/>
		<control-output control="FLAP0"
										prop="/surface-positions/rudder-pos-norm"/>
		<control-speed control="FLAP0"
									 transition-time="2"/>
		<flap1 start="0.3"
					 end="0.65"
					 lift="1.4"
					 drag="1.4"/>
		<control-input axis="/controls/flight/rudder-trim"
									 control="FLAP1"
									 invert="true"/>
		<control-output control="FLAP1"
										prop="/surface-positions/rudder-trim-pos-norm"/>
	</vstab>
	<!-- stub wing left -->
	<vstab x="-2.99"
				 y="0.44"
				 z="-0.57"
				 taper="0"
				 incidence="-2"
				 twist="0"
				 chord="2.497"
				 sweep="0"
				 dihedral="-90"
				 length="0.897"  >
		<stall aoa="15"
					 width="4"
					 peak="1.5"/>
		<flap0 start="0.00"
					 end="1"
					 lift="1.45"
					 drag="1.5"/>
		<control-input axis="/controls/flight/flaps"
									 control="FLAP0"/>
		<control-output control="FLAP0"
										prop="/surface-positions/flap-pos-norm"/>
		<control-speed control="FLAP0"
									 transition-time="10"/>
	</vstab>
	<!-- stub wing right -->
	<vstab x="-2.99"
				 y="-0.44"
				 z="-0.57"
				 taper="0"
				 incidence="2"
				 twist="0"
				 chord="2.497"
				 sweep="0"
				 dihedral="90"
				 length="0.897"  >
		<stall aoa="15"
					 width="4"
					 peak="1.5"/>
		<flap0 start="0.00"
					 end="1"
					 lift="1.45"
					 drag="1.5"/>
		<control-input axis="/controls/flight/flaps"
									 control="FLAP0"/>
		<control-output control="FLAP0"
										prop="/surface-positions/flap-pos-norm"/>
		<control-speed control="FLAP0"
									 transition-time="10"/>
	</vstab>
	<!-- radiator 'wing' centre -->
	<vstab x="-3.93"
				 y="-0.34"
				 z="-1.09"
				 taper="0"
				 incidence="0"
				 twist="0"
				 chord="1.00"
				 sweep="0"
				 dihedral="90"
				 length="0.68"  >
		<stall aoa="25"
					 width="4"
					 peak="1.5"/>
		<flap0 start="0.00"
					 end="1"
					 lift="1.1"
					 drag="1.3"/>
		<control-input axis="/controls/engines/engine/rad-flap-norm"
									 control="FLAP0"/>
		<control-output control="FLAP0"
										prop="/engines/engine/rad-flap-norm"/>
		<control-speed control="FLAP0"
									 transition-time="3" />
	</vstab>
	<!-- propeller and engine -->
	<!-- moment = radius(m)* propeller mass(kg)/2 - equation provided by Andy Ross -->
	<!-- documented gear ratio of 0.477  min-rpm="1800" max-rpm="3000" takeoff-power="1280"
			takeoff-rpm="1431"
-->
	<propeller   x="-1.35"
							 y="0"
							 z="-0.0"
							 mass="2055"
							 moment="75"
							 radius="1.638"
							 cruise-speed="295"
							 cruise-rpm="1431"
							 cruise-power="1490"
							 cruise-alt="21000"
							 min-rpm="715"
							 max-rpm="1431"
							 gear-ratio="0.477"
			>
		<actionpt x="-0.75"
							y="0"
							z="0"/>
		<control-input axis="/controls/engines/engine[0]/propeller-pitch"
									 control="ADVANCE"/>
		<piston-engine
			eng-power="1280"
			eng-rpm="3000"
			displacement="1649"
			compression="6"
			turbo-mul="4.25"
			wastegate-mp="66.5696"
			supercharger="1"
					>
			<control-input axis="/controls/engines/engine[0]/throttle"
										 control="THROTTLE"/>
			<control-input axis="/controls/engines/engine[0]/boost-control"
										 src0="-1"
										 src1="1"
										 dst0="-1"
										 dst1="1"
										 control="THROTTLE"/>
			<control-input axis="/controls/engines/engine[0]/starter"
										 control="STARTER"/>
			<control-input axis="/controls/engines/engine[0]/magnetos"
										 control="MAGNETOS"/>
			<control-input axis="/controls/engines/engine[0]/mixture"
										 control="MIXTURE"/>
			<control-input axis="/controls/engines/engine[0]/boost"
										 control="BOOST"/>
		</piston-engine>
		<!--wastegate-mp=""  -->
	</propeller>
	<!-- simulate cannon recoil -->
	<thruster x="3.5"
						y="0"
						z="0.4"
						vx="-1"
						vy="0"
						vz="0.3"
						thrust="4000">
		<control-input axis="/sim/ai/recoil"
									 control="THROTTLE"
									 src0="0"
									 src1="1"
									 dst0="0"
									 dst1="1"/>
	</thruster>
	
	<thruster x="3.5"
						y="0"
						z="0.4"
						vx="1"
						vy="0"
						vz="-0.3"
						thrust="4000">
		<control-input axis="/sim/ai/runout"
									 control="THROTTLE"
									 src0="0"
									 src1="1"
									 dst0="0"
									 dst1="1"/>
	</thruster>
	<!-- Tail wheel -->
	<!-- tail wheel casters freely in Hurricane -->
	<gear x="-8.57"
				y="0"
				z="-0.94"
				compression="0.15"
				castering="1">
		<control-input axis="/controls/gear/tailwheel-lock"
									 src0="0"
									 src1="1"
									 dst0="1"
									 dst1="1"
									 control="CASTERING"/>
		<control-input axis="/controls/gear/brake-parking"
									 control="BRAKE"
									 transition-time="0"
									 src0="0"
									 src1="0.33"
									 dst0="1"
									 dst1="0.33"/>
	</gear>
	<!-- left main spring="0.7" damp="3.0" dfric="0.5" sfric="0.6"dfric="0.5" sfric="0.6"-->
	<gear x="-2.64"
				y="1.21"
				z="-2.07"
				compression="0.25"  >
		<control-input axis="/controls/gear/brake-left"
									 control="BRAKE"
									 transition-time="1"
									 src0="0"
									 src1="1"
									 dst0="0"
									 dst1="0.8"/>
		<control-input axis="/controls/gear/brake-parking"
									 control="BRAKE"
									 split="true"/>
		<control-input axis="/controls/hydraulic/wheels"
									 control="EXTEND"/>
		<control-speed control="EXTEND"
									 transition-time="9"/>
		<control-output control="EXTEND"
										prop="/gear/gear[1]/position-norm"/>
	</gear>
	<!-- right main spring="0.7" damp="3.0" -->
	<gear x="-2.64"
				y="-1.21"
				z="-2.07"
				compression="0.25" >
		<control-input axis="/controls/gear/brake-right"
									 control="BRAKE"
									 transition-time="1"
									 src0="0"
									 src1="1"
									 dst0="0"
									 dst1="0.8"/>
		<control-input axis="/controls/gear/brake-parking"
									 control="BRAKE"
									 split="true"/>
		<control-input axis="/controls/hydraulic/wheels"
									 control="EXTEND"/>
		<control-speed control="EXTEND"
									 transition-time="7"/>
		<control-output control="EXTEND"
										prop="/gear/gear[2]/position-norm"/>
	</gear>

	<!-- dummy Tail wheel - add a little friction to make it flyable! -->
	<gear x="-8.57"
				y="0"
				z="-0.94"
				compression="0.15"
				dfric="0.50"
				sfric ="0.60">
		<control-input axis="/controls/gear/brake-parking"
									 control="BRAKE"
									 transition-time="0"
									 src0="0"
									 src1="0.33"
									 dst0="1"
									 dst1="0.33"/>
	</gear>
	<!-- Canopy -->
	<gear x="-3.90"
				y="0.0"
				z="0.7"
				compression="1">
		<control-input axis="/controls/flight/canopy-slide"
									 control="EXTEND"/>
		<control-speed control="EXTEND"
									 transition-time="2"/>
		<control-output control="EXTEND"
										prop="/gear/canopy/position-norm"/>
	</gear>
	<!-- Hook 
    <gear x="-6.70" y="0.0" z="-1.74" compression="1" spring="0.15"> 
      <control-input axis="/controls/gear/tailhook" control="EXTEND"/>
      <control-speed control="EXTEND" transition-time="2"/>
      <control-output control="EXTEND" prop="/gear/tailhook/position-norm"/>
    </gear>-->
	<!-- Hook  - the hook extends only - it has no retracting mechanism 
      <hook x="-5.91" y="0.0" z="-0.60" length="1.416" down-angle="55" up-angle="-5"> 
        <control-input axis="/controls/gear/tailhook" control="HEXTEND"/>
        <control-speed control="HEXTEND" transition-time="5"/>
      </hook>-->
	<!-- Launch-bar 

Note: the Seafire was not fitted with a catpult launch-bar - it used a catapult strop, 
if at all. It usually did a free take-off.
the launch-bar is included here as a workable substitute. 
      <launchbar x="-2.30" y="0.0" z="-1.25" length="1.0"> 
       <control-input axis="/controls/gear/launchbar" control="LEXTEND"/>
        <control-speed control="LEXTEND" transition-time="1"/>
      </launchbar>-->
	<!-- Wing and Fuselage tanks. 
Weight of contents calculated using 100 octane AVGAS density of 695 kg/m3 @ 15degC

-->
	<tank x="-3.41"
				y="0.99"
				z="-0.5"
				capacity="229"/>
	<!-- left 33 imp gals -->
	<tank x="-3.41"
				y="-0.99"
				z="-0.5"
				capacity="229"/>
	<!--  right 33 imp gals -->
	<tank x="-2.56"
				y="0"
				z="0.45"
				capacity="195"/>
	<!--  centre 28 imp gals -->
	<!-- ballast and weights -->
	<!-- Cockpit, sundries-->
	<ballast x="-3.50"
					 y="0"
					 z="-0.29"
					 mass="400"/>
	<!-- armament -->
	<!-- innner guns -->
	<ballast x="-3.06"
					 y="2.27"
					 z="-0.50"
					 mass="52"/>
	<ballast x="-3.06"
					 y="-2.27"
					 z="-0.50"
					 mass="52"/>
	<ballast x="-3.06"
					 y="2.13"
					 z="-0.51"
					 mass="52"/>
	<ballast x="-3.06"
					 y="-2.13"
					 z="-0.51"
					 mass="52"/>
	<ballast x="-3.06"
					 y="2.00"
					 z="-0.52"
					 mass="52"/>
	<ballast x="-3.06"
					 y="-2.00"
					 z="-0.52"
					 mass="52"/>
	<ballast x="-3.06"
					 y="1.85"
					 z="-0.53"
					 mass="52"/>
	<ballast x="-3.06"
					 y="-1.85"
					 z="-0.53"
					 mass="52"/>
	<!-- outer guns -->
	<ballast x="-3.06"
					 y="3.46"
					 z="-0.39"
					 mass="52"/>
	<ballast x="-3.06"
					 y="-3.46"
					 z="-0.39"
					 mass="52"/>
	<ballast x="-3.06"
					 y="3.70"
					 z="-0.43"
					 mass="52"/>
	<ballast x="-3.06"
					 y="-3.70"
					 z="-0.43"
					 mass="52"/>
	<!-- Radiator -->
	<ballast x="-3.93"
					 y="0.1"
					 z="-1.09"
					 mass="100"/>
	<!-- pilot -->
	<weight x="-3.65"
					y="0"
					z="-0.04"
					mass-prop="/yasim/weights/pilot-lb"/>
</airplane>
