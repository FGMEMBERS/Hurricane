                   control="BRAKE"
                   transition-time="0"
                   src0="0"
                   src1="0.4"
                   dst0="1"
                   dst1="0.4"/>
  </gear>
  <!-- left main   dfric="0.5" sfric="0.6"dfric="0.5" sfric="0.6"-->
  <gear x="-2.76"
        y="1.18"
        z="-2.02"
        spring="1.2"
        damp="4.0"
        compression="0.25"
        dfric="0.7"
        sfric ="0.8">
    <control-input axis="/controls/gear/brake-left"
                   control="BRAKE"
									 transition-time="0.25"
                   src0="0"
                   src1="1"
                   dst0="0.001"
                   dst1="0.6"/>
    <control-input axis="/controls/gear/brake-parking"
                   control="BRAKE"
                   split="true"/>
    <control-input axis="/controls/hydraulic/wheels"
                   control="EXTEND"/>
    <control-speed control="EXTEND"
                   transition-time="9"/>
    <control-output control="EXTEND"
                    prop="/gear/gear[1]/position-norm"/>
  </gear>
  <!-- right main spring="0.7" damp="3.0" -->
