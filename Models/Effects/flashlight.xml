<PropertyList>

  <path>flashlight.ac</path>
 
  <animation>
    <type>light</type>
    <light-type>spot</light-type>
    <name>flashlight</name>
    <object-name>FlashLightVol</object-name>
    <nopreview/>
    <position>
      <x> 0.0 </x>
      <y> 0.0 </y>
      <z> 0.0 </z>
    </position>
    <direction>
      <x> -1.0 </x>
      <y>  0.0 </y>
      <z>  0.0 </z>
    </direction>
    <ambient>
      <r>  0.0 </r>
      <g>  0.0 </g>
      <b>  0.0 </b>
      <a>  1.0 </a>
    </ambient>
    <diffuse>
      <r>  0.5 </r>
      <g>  0.404 </g>
      <b>  0.2 </b>
      <a>  1.0 </a>
    </diffuse>
    <specular>
      <r>  0.25 </r>
      <g>  0.202 </g>
      <b>  0.1 </b>
      <a>  1.0 </a>
    </specular>
    <attenuation>
      <c>  1.0 </c>
      <l>  0.6 </l>
      <q>  0.4 </q>
    </attenuation>
    <exponent>  75.0  </exponent>
    <cutoff>    7.5  </cutoff>
    <near-m>    0.03 </near-m>
    <far-m>     3.8  </far-m>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>flashlight</object-name>
    <property>sim/current-view/pitch-offset-deg</property>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>flashlight</object-name>
    <property>sim/current-view/heading-offset-deg</property>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>flashlight</object-name>
    <property>sim/current-view/roll-offset-deg</property>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
