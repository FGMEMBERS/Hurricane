<?xml version="1.0"?>
<!-- Light - Landing -->
<PropertyList>

  <path>panel-light.ac</path>

   <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>lens</object-name>
  </effect>

  <!--<animation>
    <type>billboard</type>
    <spherical>true</spherical>
    <object-name>White-Light-Flare</object-name>
  </animation>-->

   <animation>
    <type>light</type>
    <light-type>spot</light-type>
    <name>Light</name>
    <object-name>LightVol</object-name>
    <nopreview/>
    <position>
      <x> 0 </x>
      <y> 0 </y>
      <z> 0 </z>
    </position>
    <direction>
      <x>-1.0</x>
      <y> 0.0</y>
      <z> 0.0</z>
    </direction>
    <ambient>
      <r>0.01</r>
      <g>0.01</g>
      <b>0.01</b>
      <a>1.0</a>
    </ambient>
    <diffuse>
      <r>0.6</r>
      <g>0.1</g>
      <b>0.1</b>
      <a>1.0</a>
    </diffuse>
    <specular>
      <r>0.5</r>
      <g>0.5</g>
      <b>0.5</b>
      <a>1.0</a>
    </specular>
     <attenuation>
       <c>1.0</c>
       <l>0.002</l>
       <q>0.00005</q>
     </attenuation>
    <exponent>37.0</exponent>
    <near-m>0.0001</near-m>
    <far-m>0.95</far-m>
    <cutoff>19</cutoff>
  </animation>

  <animation>
    <type>select</type>
    <condition>
      <greater-than>
        <property>/controls/lighting/panel-norm[1]</property>
        <value>0.0</value>
      </greater-than>
      <greater-than-equals>
        <property>systems/electrical/outputs/landing-light</property>
        <value>10</value>
      </greater-than-equals>
    </condition>
    <object-name>Light</object-name>
  </animation>

   <animation>
    <type>select</type>
    <object-name>Light</object-name>
    <condition>
        <greater-than>
          <property>/sim/time/sun-angle-rad</property>
          <value>1.4</value>
        </greater-than>
     </condition>
  </animation>

