<?xml version="1.0"?>
<!-- Light - Landing -->
<PropertyList>

  <path>landing-light.ac</path>

  <animation>
    <type>alpha-test</type>
    <object-name>White-Light-Flare</object-name>
    <alpha-factor>0.01</alpha-factor>
  </animation>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>White-Light-Flare</object-name>
  </effect>

  <animation>
    <type>noshadow</type>
    <object-name>White-Light-Flare</object-name>
  </animation>

  <!--<animation>
    <type>billboard</type>
    <spherical>true</spherical>
    <object-name>White-Light-Flare</object-name>
  </animation>-->

  <animation>
    <type>flash</type>
    <object-name>White-Light-Flare</object-name>
    <offset>0.0</offset>
    <factor>1.0</factor>
    <power>1.0</power>
    <two-sides type="bool">false</two-sides>
    <min>0.0</min>
    <max>1.0</max>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>-1.0 </x>
      <y> 0.0 </y>
      <z> 0.0 </z>
    </axis>
  </animation>

  <animation>
    <type>dist-scale</type>
    <object-name>White-Light-Flare</object-name>
    <interpolation>
      <entry>
        <ind>0.001</ind>
        <dep>1</dep>
      </entry>
      <entry>
        <ind>40000</ind>
        <dep>150</dep>
      </entry>
      <entry>
        <ind>80000</ind>
        <dep>300</dep>
      </entry>
    </interpolation>
  </animation>

  <animation>
    <type>scale</type>
    <object-name>White-Light-Flare</object-name>
    <property>/sim/time/sun-angle-rad</property>
    <offset>-1.4</offset>
    <x-min>1</x-min>
    <y-min>1</y-min>
    <z-min>1</z-min>
    <x-factor>2</x-factor>
    <y-factor>2</y-factor>
    <z-factor>2</z-factor>
  </animation>

  <animation>
    <type>light</type>
    <light-type>spot</light-type>
    <name>LandingLight</name>
    <object-name>LandingLightVol</object-name>
    <nopreview/>
    <position>
      <x> 0 </x>
      <y> 0 </y>
      <z> 0 </z>
    </position>
    <direction>
      <x>-1.0</x>
      <y> 0.0</y>
      <z> 0.0</z>
    </direction>
    <diffuse>
      <r>1.0</r>
      <g>0.9</g>
      <b>0.7</b>
      <a>1.0</a>
    </diffuse>
    <specular>
      <r>1.0</r>
      <g>0.9</g>
      <b>0.7</b>
      <a>1.0</a>
    </specular>
    <attenuation>
      <c>1.0</c>
      <l>0.002</l>
      <q>0.00005</q>
    </attenuation>
    <exponent>20</exponent>
    <cutoff>7.5</cutoff>
    <near-m>3.0</near-m>
    <far-m>200</far-m>
  </animation>

  <!--<ambient>
    <r> 0.3 </r>
    <g> 0.3 </g>
    <b> 0.3 </b>
    <a> 1.0 </a>
  </ambient>
  <diffuse>
    <r> 0.8 </r>
    <g> 0.8 </g>
    <b> 0.8 </b>
    <a> 1.0 </a>
  </diffuse>
  <specular>
    <r> 0.5 </r>
    <g> 0.5 </g>
    <b> 0.5 </b>
    <a> 1.0 </a>
  </specular>

  <attenuation>
    <c> 0.600 </c>
    <l> 0.000 </l>
    <q> 0.002 </q>
  </attenuation>
  <exponent> 24.0 </exponent>
  <cutoff> 60.0 </cutoff>
  <near-m> 2.5 </near-m>
  <far-m> 120.0 </far-m>-->

   <animation>
    <type>select</type>
    <object-name>LandingLight</object-name>
    <condition>
        <greater-than>
          <property>/sim/time/sun-angle-rad</property>
          <value>1.4</value>
        </greater-than>
     </condition>
  </animation>

