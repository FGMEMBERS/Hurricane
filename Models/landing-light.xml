<?xml version="1.0"?>
<!-- Light - Landing -->
<PropertyList>

  <path>landing-light.ac</path>

  <animation>
    <type>alpha-test</type>
    <object-name>White-Light-Flare</object-name>
    <alpha-factor>0.01</alpha-factor>
  </animation>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>White-Light-Flare</object-name>
  </effect>

  <animation>
    <type>noshadow</type>
    <object-name>White-Light-Flare</object-name>
  </animation>

  <!--<animation>
    <type>billboard</type>
    <spherical>true</spherical>
    <object-name>White-Light-Flare</object-name>
  </animation>-->

  <animation>
    <type>dist-scale</type>
    <object-name>White-Light-Flare</object-name>
    <interpolation>
      <entry>
        <ind>0.001</ind>
        <dep>2</dep>
      </entry>
      <entry>
        <ind>40000</ind>
        <dep>100</dep>
      </entry>
    </interpolation>
  </animation>

  <animation>
    <type>scale</type>
    <object-name>White-Light-Flare</object-name>
    <property>/sim/time/sun-angle-rad</property>
    <offset>-1.4</offset>
    <x-min>1</x-min>
    <y-min>1</y-min>
    <z-min>1</z-min>
    <x-factor>2</x-factor>
    <y-factor>2</y-factor>
    <z-factor>2</z-factor>
  </animation>

  <animation>
    <type>light</type>
    <light-type>spot</light-type>
    <name>LandingLight</name>
    <object-name>LandingLightVol</object-name>
    <position>
      <x> 0 </x>
      <y> 0 </y>
      <z> 0 </z>
    </position>
    <direction>
      <x>-1.0</x>
      <y> 0.0</y>
      <z> 0.0</z>
    </direction>
    <ambient>
      <r>0.03</r>
      <g>0.03</g>
      <b>0.03</b>
      <a>1.0</a>
    </ambient>
    <diffuse>
      <r>1.0</r>
      <g>1.0</g>
      <b>0.8</b>
      <a>1.0</a>
    </diffuse>
    <specular>
      <r>0.9</r>
      <g>0.9</g>
      <b>0.9</b>
      <a>1.0</a>
    </specular>
    <attenuation>
      <c>1.0</c>
      <l>0.002</l>
      <q>0.00005</q>
    </attenuation>
    <exponent>20.0</exponent>
    <cutoff>10</cutoff>
    <near-m>3.0</near-m>
    <far-m>250</far-m>
  </animation>

   <animation>
    <type>select</type>
    <object-name>LandingLight</object-name>
    <condition>
        <greater-than>
          <property>/sim/time/sun-angle-rad</property>
          <value>1.4</value>
        </greater-than>
     </condition>
  </animation>

  <!--    *** LoD *** 
    <animation> 
      <type>range</type>
      <object-name>White-Flare</object-name>
      <min-m>0</min-m>
      <max-m>5000</max-m>
    </animation>-->

</PropertyList>
