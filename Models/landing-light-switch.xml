<?xml version="1.0"?>
<!-- Port Coaming Panel -->
<PropertyList>
  <path>landing-light-switch.ac</path>

  <!-- Landing Lights Port/off/Stbd -->
  <animation>
    <type>rotate</type>
    <object-name>switch</object-name>
    <property>controls/lighting/landing-light</property>
    <offset-deg>0</offset-deg>
    <factor>-30</factor>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0.00986445</z-m>
    </center>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>landing-light-1</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property>controls/lighting/landing-light</property>
        <value>1</value>
      </binding>
    </action>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>landing-light-0</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property>controls/lighting/landing-light</property>
        <value>0</value>
      </binding>
    </action>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>landing-light-2</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property>controls/lighting/landing-light</property>
        <value>-1</value>
      </binding>
    </action>
  </animation>

  <animation>
    <type>material</type>
    <emission>
      <factor-prop>/controls/lighting/panel-norm</factor-prop>
      <red>0.75</red>
      <green>0.25</green>
      <blue>0.25</blue>
    </emission>
  </animation>

  <!-- *** LoD *** -->
  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>5</max-m>
  </animation>

</PropertyList>
