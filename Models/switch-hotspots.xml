<?xml version="1.0"?>
   <!DOCTYPE PropertyList SYSTEM "panel.dtd"> 
  <!--   This part should be the same for any 3D panel.  Customize the actions section -->
    <PropertyList> 
      <name>switch hotspots</name>
      <background>Aircraft/Hurricane/Models/transparent-bg.rgb</background>
      <w>124</w>
      <h>124</h>
      <y-offset>0</y-offset>
      <instruments> 
        <instrument> 
          <name>Flaps Control</name>
          <y>320</y>
          <w>1024</w>
          <h>768</h>
          <w-base>1024</w-base>
          <h-base>1024</h-base>
          <x>512</x>
          <layers> 
            <layer> 
              <name>background</name>
              <texture> 
                <path>Aircraft/Hurricane/Models/transparent-bg.rgb</path>
                <x1>0.0</x1>
                <y1>0.0</y1>
                <x2>1.0</x2>
                <y2>1.0</y2>
              </texture>
            </layer>
         <!--  --> <layer> 
              <name>grid</name>
              <texture> 
                <path>Aircraft/Hurricane/Models/hotspotgrid.rgb</path>
                <x1>0.0</x1>
                <y1>0.0</y1>
                <x2>1.0</x2>
                <y2>1.0</y2>
              </texture>
            </layer> 
          </layers>
          <actions>
            <action> 
              <name>gun sight main up</name>
              <button>0</button>
              <x>0</x>
              <y>0</y>
              <w>35</w>
              <h>30</h>
              <binding> 
                <command>property-assign</command>
                <property>/controls/switches/gun-sight-main</property>
                <value type="bool">1</value>
              </binding>
            </action>
            <action> 
              <name>gun sight main down</name>
              <button>0</button>
              <x>0</x>
              <y>-30</y>
              <w>35</w>
              <h>30</h>
              <binding> 
                <command>property-assign</command>
                <property>/controls/switches/gun-sight-main</property>
                <value type="bool">0</value>
              </binding>
            </action>
            
			  
            
          </actions>
        </instrument>
      </instruments>
    </PropertyList>
  