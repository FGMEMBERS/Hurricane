<?xml version="1.0"?>
<PropertyList>
	<path>rgs.ac</path>
	<animation>
		<type>select</type>
		<object-name>back</object-name>
		<condition>
			<not>
				<equals>
					<property>/sim/current-view/view-number</property>
					<value>0</value>
				</equals>
			</not>
		</condition>
	</animation>
	<animation>
		<type>blend</type>
		<object-name>glass</object-name>
		<offset>0.75</offset>
	</animation>
	<animation>
		<type>select</type>
		<object-name>disk</object-name>
		<condition>
			<and>
				<equals>
					<property>/sim/current-view/view-number</property>
					<value>0</value>
				</equals>
				<equals>
					<property>/controls/switches/gun-sight-main</property>
					<value>1</value>
				</equals>
			</and>
		</condition>
	</animation>
	<animation>
		<type>blend</type>
		<object-name>disk</object-name>
		<property>/controls/switches/gun-sight-dimmer</property>
	</animation>
	<animation>
		<type>material</type>
		<object-name>front</object-name>
		<emission>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
			<red>0.25</red>
			<green>0.020</green>
			<blue>0.020</blue>
		</emission>
	</animation>
	<animation>
		<type>material</type>
		<object-name>disk</object-name>
		<emission>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
			<red>0.75</red>
			<green>0.25</green>
			<blue>0.25</blue>
		</emission>
	</animation>
	<!--	-->
</PropertyList>
