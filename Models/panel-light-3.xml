<?xml version="1.0"?>
<!-- Light - Panel -->
<PropertyList>

  <path>panel-light.ac</path>

  <animation>
    <type>scale</type>
    <object-name>LightVol</object-name>
    <factor>1.0</factor>
    <x-factor>0.0</x-factor>
    <x-offset>0.55</x-offset>
    <y-factor>0.0</y-factor>
    <y-offset>0.55</y-offset>
    <z-factor>0.0</z-factor>
    <z-offset>0.55</z-offset>
  </animation>

  <animation>
    <type>light</type>
    <light-type>spot</light-type>
    <name>Light-3</name>
    <object-name>LightVol</object-name>
    <nopreview/>
    <position>
      <x> 0 </x>
      <y> 0 </y>
      <z> 0 </z>
    </position>
    <direction>
      <x>-1.0</x>
      <y> 0.0</y>
      <z> 0.0</z>
    </direction>
    <diffuse>
      <r>0.6</r>
      <g>0.1</g>
      <b>0.1</b>
      <a>1.0</a>
    </diffuse>
    <specular>
      <r>0.6</r>
      <g>0.1</g>
      <b>0.1</b>
      <a>1.0</a>
    </specular>
    <attenuation>
      <c>1.0</c>
      <l>0.002</l>
      <q>0.00005</q>
    </attenuation>
    <exponent>40.0</exponent>
    <near-m>0.0001</near-m>
    <far-m>0.50</far-m>
    <cutoff>20</cutoff>
    <dim-factor>
      <property>/controls/lighting/panel-norm[4]</property>
      <!-- optional begin -->
      <!--<expression />
       <interpolation />
       <factor>1</factor>
       <offset>0</offset>
       <min>0</min>
       <max>1</max>-->
      <!-- optional end -->
    </dim-factor>
  </animation>

  <animation>
    <type>select</type>
    <condition>
      <greater-than-equals>
        <property>/systems/electrical/outputs/instrument-lights</property>
        <value>10</value>
      </greater-than-equals>
    </condition>
    <object-name>Light-3</object-name>
  </animation>

  <animation>
    <type>select</type>
    <object-name>Light-3</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.4</value>
      </greater-than>
    </condition>
  </animation>

</PropertyList>
