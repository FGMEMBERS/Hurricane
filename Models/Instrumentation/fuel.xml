<?xml version="1.0"?>
  <!-- fuel contents -->
  <PropertyList> 
    <path>fuel.ac</path>
	<animation> 
      <type>rotate</type>
      <object-name>pointer</object-name>
      <property>/controls/switches/fuel-gauge-sel</property>
      <interpolation> 
        <entry> 
          <ind>0</ind>
          <dep>45</dep>
        </entry>
        <entry> 
          <ind>1</ind>
          <dep>-45</dep>
        </entry>
        <entry> 
          <ind>2</ind>
          <dep>0</dep>
        </entry>
      </interpolation>
      <center> 
        <x-m>0</x-m>
        <y-m>-0.03</y-m>
        <z-m>0.08</z-m>
      </center>
      <axis> 
        <x>1</x>
        <y>0</y>
        <z>0</z>
      </axis>
    </animation>
    <animation> 
      <type>rotate</type>
      <object-name>Needle2</object-name>
      <property>instrumentation/fuel/contents-gal_us</property>
      <interpolation> 
        <entry> 
          <ind>0</ind>
          <dep>0</dep>
        </entry>
        <entry> 
          <ind>24.01</ind>
          <dep>45</dep>
        </entry>
        <entry> 
          <ind>48.03</ind>
          <dep>90</dep>
        </entry>
      </interpolation>
      <center> 
        <x-m>0</x-m>
        <y-m>0</y-m>
        <z-m>0.02</z-m>
      </center>
      <axis> 
        <x>1</x>
        <y>0</y>
        <z>0</z>
      </axis>
    </animation>
    <animation> 
      <type>select</type>
      <object-name>Needle1</object-name>
      <condition> 
        <not> 
          <property>controls/switches/fuel-gauge</property>
        </not>
      </condition>
    </animation>
    <animation> 
      <type>select</type>
      <object-name>Needle2</object-name>
      <condition> 
        <property>controls/switches/fuel-gauge</property>
      </condition>
    </animation>

