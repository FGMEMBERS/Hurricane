<?xml version="1.0"?>
  <PropertyList> 
    <path>compass.ac</path>
    <animation> 
      <type>rotate</type>
      <object-name>Compass</object-name>
      <property>instrumentation/magnetic-compass/indicated-heading-deg</property>
      <center> 
        <x-m>-0.02725</x-m>
        <y-m>0</y-m>
        <z-m>0</z-m>
      </center>
      <axis> 
        <x>0</x>
        <y>0</y>
        <z>1</z>
      </axis>
    </animation>
    
    <animation>
      <type>material</type>
      <condition>
        <greater-than>
          <property>/controls/lighting/panel-norm[1]</property>
          <value>0</value>
        </greater-than>
        <property>/sim/rendering/rembrandt</property>
      </condition>
      <emission>
        <factor-prop>/controls/lighting/panel-norm</factor-prop>
        <red>0.0</red>
        <green>0.0</green>
        <blue>0.0</blue>
      </emission>
    </animation>

    <animation>
      <type>material</type>
      <condition>
        <greater-than>
          <property>/controls/lighting/panel-norm</property>
          <value>0</value>
        </greater-than>
        <not>
          <property>/sim/rendering/rembrandt</property>
        </not>
      </condition>
      <emission>
        <factor-prop>/controls/lighting/panel-norm</factor-prop>
        <red>0.75</red>
        <green>0.25</green>
        <blue>0.25</blue>
      </emission>
    </animation>

    <!-- *** LoD *** -->
    <animation> 
      <type>range</type>
      <min-m>0</min-m>
      <max-m>5</max-m>
    </animation>
  </PropertyList>
