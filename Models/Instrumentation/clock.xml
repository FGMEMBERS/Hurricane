<?xml version="1.0"?>
<PropertyList>
	<path>clock.ac</path>

	<animation>
		<type>rotate</type>
		<object-name>HourHand</object-name>
		<property>/instrumentation/clock/indicated-sec</property>
		<factor>0.00833333333333333</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>MinuteHand</object-name>
		<property>/instrumentation/clock/indicated-sec</property>
		<factor>0.1</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>SecondHand</object-name>
		<property>/instrumentation/clock/indicated-sec</property>
		<factor>6</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

